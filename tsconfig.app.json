{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./packages/tester-frontend/src/*"
      ]
    },
    "typeRoots": [
      "packages/tester-frontend/src/@types"
    ],
    "verbatimModuleSyntax": true
  },
  "include": [
    "env.d.ts",
    "packages/tester-frontend/src/**/*",
    "packages/tester-frontend/src/**/*.ts",
    "packages/tester-frontend/src/**/*.json",
    "packages/tester-frontend/src/**/*.vue"
  ],
  "exclude": [
    "packages/tester-frontend/src/**/__tests__/*"
  ]
}
